<Grid
    x:Class="RevitLookup.UI.Tests.Views.Dialogs.OpenSourceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevitLookup.UI.Tests.Views"
    xmlns:dialogs="clr-namespace:RevitLookup.UI.Tests.ViewModels.Dialogs"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance dialogs:OpenSourceDialogViewModel}">
    <DataGrid
        Margin="0 20 0 20"
        AutoGenerateColumns="False"
        GridLinesVisibility="None"
        IsReadOnly="True"
        HeadersVisibility="Column"
        RowHeight="40"
        ColumnHeaderHeight="30"
        CanUserReorderColumns="False"
        CanUserResizeColumns="False"
        ItemsSource="{Binding Software}">
        <DataGrid.Columns>
            <DataGridHyperlinkColumn
                Width="400"
                Binding="{Binding SoftwareUri}"
                ContentBinding="{Binding SoftwareName}"
                Header="Software">
            </DataGridHyperlinkColumn>
            <DataGridHyperlinkColumn
                Binding="{Binding LicenseUri}"
                ContentBinding="{Binding LicenseName}"
                Header="License">
            </DataGridHyperlinkColumn>
        </DataGrid.Columns>
    </DataGrid>
</Grid>